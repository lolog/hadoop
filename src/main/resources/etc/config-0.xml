<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
	<property>
		<name>color</name>
		<value>yellow</value>
		<description>Color</description>
	</property>
	<property>
		<name>size</name>
		<value>10</value>
	</property>

	<property>
		<name>weight</name>
		<value>heavy</value>
		<final>true</final>
	</property>
	<property>
		<name>size-weight</name>
		<value>${size}, ${weight}</value>
	</property>
</configuration>
